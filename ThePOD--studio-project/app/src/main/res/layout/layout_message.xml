<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout
                android:id="@+id/messagePreviewMeat"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/messenger_profile_pic"
                    android:paddingTop="3dp"
                    android:paddingLeft="3dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@android:color/black"
                    android:src="@drawable/gjokidre9qn41">

                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:id="@+id/messenger_displayname"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="10pt"
                    android:text="knaxel baby">

                </TextView>


            </LinearLayout>
        <ImageView
            android:id="@+id/postOptions"
            android:layout_alignRight="@+id/messagePreviewMeat"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_recieved_message" >
        </ImageView>

    <View
        android:id="@+id/divider"
        android:layout_below="@+id/messagePreviewMeat"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />
</RelativeLayout>